{
    "Associate a scheme to a field": {
        "input": {
            "title": "A great title"
        },
        "stylesheet": {
            "ldScheme": [ "title", "http://purl.org/dc/terms/title" ]
        },
        "expected": {
            "@context": {
                "title": {
                    "@id": "http://purl.org/dc/terms/title"
                }
            },
            "title": "A great title"
        }
    },
    "Contextualize a field": {
        "input": {
            "access": true
        },
        "stylesheet": {
            "contextualize": {
                "access": {
                    "@id" : "https://schema.org/isAccessibleForFree",
                    "@type": "https://www.w3.org/TR/xmlschema-2/#boolean"
                }
            }
        },
        "expected": {
            "@context": {
                "access": {
                  "@id": "https://schema.org/isAccessibleForFree",
                  "@type": "https://www.w3.org/TR/xmlschema-2/#boolean"
                }
            },
            "access": true
        }
    },
    "Output an expanded JSON-LD": {
        "input": {
            "@context": {
                "access": {
                  "@id": "https://schema.org/isAccessibleForFree",
                  "@type": "https://www.w3.org/TR/xmlschema-2/#boolean"
                }
            },
            "access": true
        },
        "stylesheet": {
            "jsonld": "expanded"
        },
        "expected": [
            {
                "https://schema.org/isAccessibleForFree": [
                    {
                    "@type": "https://www.w3.org/TR/xmlschema-2/#boolean",
                    "@value": true
                    }
                ]
            }
        ]
    },
    "Output a compacted JSON-LD": {
        "input": {
            "@context": {
                "access": {
                  "@id": "https://schema.org/isAccessibleForFree",
                  "@type": "https://www.w3.org/TR/xmlschema-2/#boolean"
                }
            },
            "access": true
        },
        "stylesheet": {
            "jsonld": "compacted"
        },
        "expected": {
            "https://schema.org/isAccessibleForFree": {
                "@type": "https://www.w3.org/TR/xmlschema-2/#boolean",
                "@value": true
            }
        }
    },
    "Output a compacted JSON-LD": {
        "input": {
            "@context": {
                "access": {
                  "@id": "https://schema.org/isAccessibleForFree",
                  "@type": "https://www.w3.org/TR/xmlschema-2/#boolean"
                }
            },
            "access": true
        },
        "stylesheet": {
            "jsonld": "flattened"
        },
        "expected": {
            "@graph": [{
                "@id": "_:b0",
                "https://schema.org/isAccessibleForFree": {
                    "@type": "https://www.w3.org/TR/xmlschema-2/#boolean",
                    "@value": true
                }
            }]
        }
    }
}
